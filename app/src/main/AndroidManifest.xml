<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="es.uah.edu.miguelangelgarciar.mraes">

    <!-- Para pulsar dos veces el boton de atras -->
    <uses-permission android:name="android.permission.REORDER_TASKS" />
    <!-- Para enviar las claves publicas -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:name="es.uah.edu.miguelangelgarciar.mraes.App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="es.uah.edu.miguelangelgarciar.mraes.activities.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="es.uah.edu.miguelangelgarciar.mraes.activities.AcercaDe" android:parentActivityName="es.uah.edu.miguelangelgarciar.mraes.activities.MainActivity"></activity>
        <activity android:name="es.uah.edu.miguelangelgarciar.mraes.activities.Secreto" android:parentActivityName="es.uah.edu.miguelangelgarciar.mraes.activities.MainActivity"></activity>
        <activity android:name="es.uah.edu.miguelangelgarciar.mraes.activities.Novedades" android:parentActivityName="es.uah.edu.miguelangelgarciar.mraes.activities.MainActivity"></activity>
        <activity android:name="es.uah.edu.miguelangelgarciar.mraes.activities.Base64Tool" android:parentActivityName="es.uah.edu.miguelangelgarciar.mraes.activities.MainActivity"></activity>
        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>