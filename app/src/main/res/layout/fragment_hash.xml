<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="es.uah.edu.miguelangelgarciar.mraes.activities.MainActivity$PlaceholderFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/background_dark">


            <LinearLayout
                android:id="@+id/layoutHash"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/tvED4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/exo2black"
                    android:text="@string/alg_2"
                    android:textAlignment="center"
                    android:textColor="@android:color/background_light"
                    android:textSize="18sp" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:layout_weight="1" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvED5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/exo2regular"
                        android:text="@string/algoritmoHash"
                        android:textAlignment="center"
                        android:textColor="@android:color/darker_gray"
                        android:textSize="18sp" />

                    <Spinner
                        android:id="@+id/spinnerHash"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_weight="1"
                        android:background="@color/colorPrimary"
                        android:entries="@array/algorithms"
                        android:popupBackground="@color/Dark_light"
                        android:prompt="@string/algoritmoHash"
                        android:spinnerMode="dialog"
                        android:textAlignment="center" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvED6"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/exo2regular"
                        android:text="@string/mensajesalt"
                        android:textColor="@android:color/darker_gray"
                        android:textSize="14sp" />

                    <Button
                        android:id="@+id/bBorrarSal"
                        android:layout_width="55dp"
                        android:layout_height="50dp"
                        android:backgroundTint="@color/Dark_light"
                        android:drawableLeft="@android:drawable/ic_input_delete"
                        android:drawableTint="@color/colorPrimary"
                        android:fontFamily="@font/ubuntu_bold"
                        android:textColor="@color/colorPrimary" />

                    <Button
                        android:id="@+id/bPasteSal"
                        android:layout_width="47dp"
                        android:layout_height="50dp"
                        android:backgroundTint="@color/Dark_light"
                        android:drawableLeft="?android:attr/actionModePasteDrawable"
                        android:drawableTint="@color/colorPrimary"
                        android:fontFamily="@font/ubuntu_bold"
                        android:textColor="@color/colorPrimary" />

                    <Button
                        android:id="@+id/bSalt"
                        android:layout_width="150dp"
                        android:layout_height="50dp"
                        android:backgroundTint="@color/Dark_light"
                        android:drawableLeft="@android:drawable/ic_menu_send"
                        android:drawableTint="@color/colorPrimary"
                        android:fontFamily="@font/exo2extrabold"
                        android:text="@string/random_salt"
                        android:textColor="@color/colorPrimary"
                        android:textSize="14sp"
                        tools:layout_editor_absoluteY="299dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/etSalt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:backgroundTint="@color/colorPrimary"
                        android:ems="10"
                        android:fontFamily="@font/exo2regular"
                        android:hint="@string/plano"
                        android:inputType="text"
                        android:maxLines="1"
                        android:singleLine="false"
                        android:textColor="@color/colorPrimary"
                        android:textColorLink="@color/colorPrimaryDark" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvED9"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/exo2regular"
                        android:text="@string/mensajehash"
                        android:textColor="@android:color/darker_gray"
                        android:textSize="18sp" />

                    <Button
                        android:id="@+id/bBorrarEntradaHash"
                        android:layout_width="55dp"
                        android:layout_height="50dp"
                        android:backgroundTint="@color/Dark_light"
                        android:drawableLeft="@android:drawable/ic_input_delete"
                        android:drawableTint="@color/colorPrimary"
                        android:fontFamily="@font/ubuntu_bold"
                        android:textColor="@color/colorPrimary" />

                    <Button
                        android:id="@+id/bPasteHash"
                        android:layout_width="47dp"
                        android:layout_height="50dp"
                        android:backgroundTint="@color/Dark_light"
                        android:drawableLeft="?android:attr/actionModePasteDrawable"
                        android:drawableTint="@color/colorPrimary"
                        android:fontFamily="@font/ubuntu_bold"
                        android:textColor="@color/colorPrimary" />

                </LinearLayout>

                <EditText
                    android:id="@+id/etHashPlano"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/colorPrimary"
                    android:ems="10"
                    android:fontFamily="@font/exo2regular"
                    android:hint="@string/plano"
                    android:singleLine="false"
                    android:textColor="@color/colorPrimary"
                    android:textColorLink="@color/colorPrimaryDark" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/exo2regular"
                        android:text="@string/mensajehasheado"
                        android:textColor="@android:color/darker_gray"
                        android:textSize="18sp" />

                    <Button
                        android:id="@+id/bBorrarSalidaHash"
                        android:layout_width="55dp"
                        android:layout_height="50dp"
                        android:backgroundTint="@color/Dark_light"
                        android:drawableLeft="@android:drawable/ic_input_delete"
                        android:drawableTint="@color/colorPrimary"
                        android:fontFamily="@font/ubuntu_bold"
                        android:textColor="@color/colorPrimary" />

                    <Button
                        android:id="@+id/bCopiarHash"
                        android:layout_width="47dp"
                        android:layout_height="50dp"
                        android:backgroundTint="@color/Dark_light"
                        android:drawableLeft="?android:attr/actionModeCopyDrawable"
                        android:drawableTint="@color/colorPrimary"
                        android:fontFamily="@font/ubuntu_bold"
                        android:textColor="@color/colorPrimary" />
                </LinearLayout>

                <EditText
                    android:id="@+id/etSalidaHash"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="@color/Dark_light"
                    android:editable="false"
                    android:ems="10"
                    android:enabled="false"
                    android:fontFamily="@font/exo2extrabold"
                    android:hint="@string/cifrado"
                    android:inputType="textCapSentences|textMultiLine"
                    android:textColor="@color/colorPrimary" />

                <Button
                    android:id="@+id/bHash"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="@color/Dark_light"
                    android:drawableLeft="@android:drawable/ic_dialog_dialer"
                    android:drawableTint="@color/colorPrimary"
                    android:fontFamily="@font/exo2extrabold"
                    android:text="@string/hashear"
                    android:textColor="@color/colorPrimary"
                    android:textSize="18sp"
                    tools:layout_editor_absoluteY="299dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvED3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/exo2regular"
                        android:text="@string/comparaHash"
                        android:textAlignment="center"
                        android:textColor="@android:color/darker_gray"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <Switch
                        android:id="@+id/swComparaHash"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text=" "
                        android:textColorLink="@color/colorPrimaryDark"
                        android:thumbTint="@color/colorPrimary"
                        android:trackTint="@android:color/background_light" />

                    <Space
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lComparaHash"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/teCoincideHash"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/exo2extrabold"
                        android:text="--"
                        android:textAlignment="center"
                        android:textColor="@android:color/darker_gray"
                        android:textSize="20sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/etHashAComparar"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:backgroundTint="@color/colorPrimary"
                            android:ems="10"
                            android:fontFamily="@font/exo2regular"
                            android:hint="@string/plano"
                            android:inputType="text|textMultiLine"
                            android:onClick="reset_hash_comparar"
                            android:singleLine="false"
                            android:textColor="@color/colorPrimary"
                            android:textColorLink="@color/colorPrimaryDark" />

                        <Button
                            android:id="@+id/bBorrarEntradaHashCompara"
                            android:layout_width="55dp"
                            android:layout_height="50dp"
                            android:backgroundTint="@color/Dark_light"
                            android:drawableLeft="@android:drawable/ic_input_delete"
                            android:drawableTint="@color/colorPrimary"
                            android:fontFamily="@font/ubuntu_bold"
                            android:textColor="@color/colorPrimary" />

                        <Button
                            android:id="@+id/bPasteHashCompara"
                            android:layout_width="47dp"
                            android:layout_height="50dp"
                            android:backgroundTint="@color/Dark_light"
                            android:drawableLeft="?android:attr/actionModePasteDrawable"
                            android:drawableTint="@color/colorPrimary"
                            android:fontFamily="@font/ubuntu_bold"
                            android:textColor="@color/colorPrimary" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>